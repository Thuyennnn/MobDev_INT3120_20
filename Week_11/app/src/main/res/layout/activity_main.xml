<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_margin="30dp">

    <EditText
        android:id="@+id/edtNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your notice"
        android:minHeight="48dp" />
    <Button
        android:id="@+id/btnStartService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Force service"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btnStopService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Force service"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btnStartBoundService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Bound service"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btnStopBoundService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Bound service"
        android:layout_gravity="center"/>


</LinearLayout>